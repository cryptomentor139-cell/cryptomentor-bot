# ============================================
# CRYPTOMENTOR BOT - ENVIRONMENT VARIABLES
# ============================================

# ============================================
# TELEGRAM BOT CONFIGURATION (REQUIRED)
# ============================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TOKEN=your_bot_token_from_botfather

# ============================================
# ADMIN CONFIGURATION (REQUIRED)
# ============================================
ADMIN1=your_telegram_user_id
ADMIN2=second_admin_id_optional
ADMIN3=third_admin_id_optional

# ============================================
# AI CONFIGURATION (REQUIRED)
# ============================================
# StepFun Step 3.5 Flash - FREE model via OpenRouter
DEEPSEEK_API_KEY=your_openrouter_api_key
DEEPSEEK_BASE_URL=https://openrouter.ai/api/v1
AI_MODEL=stepfun/step-3.5-flash

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
# Supabase - Get from https://supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ============================================
# CRYPTO DATA PROVIDERS (OPTIONAL)
# ============================================
# CryptoCompare - Get free key from https://min-api.cryptocompare.com
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key

# Helius RPC - Get free key from https://www.helius.dev
HELIUS_API_KEY=your_helius_api_key

# ============================================
# BOT SETTINGS (OPTIONAL)
# ============================================
WELCOME_CREDITS=100
SESSION_SECRET=generate_random_secret_key_here
USE_LEGACY_FUTURES_SIGNALS=true

# ============================================
# NEON DATABASE (OPTIONAL - if using Neon)
# ============================================
PGHOST=your_neon_host
PGDATABASE=neondb
PGUSER=neondb_owner
PGPASSWORD=your_neon_password
PGPORT=5432

# ============================================
# CRYPTO NEWS (OPTIONAL)
# ============================================
CRYPTONEWS_API_KEY=your_cryptonews_api_key
